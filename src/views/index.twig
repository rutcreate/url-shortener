{% extends 'layout.twig' %}

{% block body %}
    <div id="app">
        <div class="text-center">
            <h1>URL Shortener</h1>
        </div>

        <div class="row">
            <div class="col-6 offset-3">
                <form method="post" id="form">
                    <div class="form-group">
                        <label for="field-url">Enter URL:</label>
                        <input type="text" class="form-control" name="url" id="field-url" v-model="url" />
                    </div>
                    <button type="submit" class="btn btn-primary" @click.prevent="submitUrl" :disabled="submitting"><% submitButtonText %></button>
                </form>

                <div id="result" class="card mt-4" v-if="shortenUrl">
                    <div class="card-header">
                        <h3>Result</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>URL</strong>: <a :href="url" target="_blank"><% url %></a></p>
                        <p><strong>Shorten URL</strong>: <a :href="shortenUrl" target="_blank"><% shortenUrl %></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
